datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int?
  User      User?   @relation(fields: [userId], references: [id])
  userId    Int?
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  name           String?
  favorite_books Book[]
}
